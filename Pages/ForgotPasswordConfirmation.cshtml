@page "{email?}"
@model VeterinaryClinic.Pages.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Письмо отправлено";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#4e8cff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
        </div>
        <h1 class="auth-title">Проверьте вашу почту</h1>
        <p class="auth-text">
            Если указанный email существует в нашей системе, мы отправили на него инструкции
            для восстановления пароля.
        </p>
        <div class="auth-footer">
            Не получили письмо? Проверьте папку "Спам" или
            <a href="/ForgotPassword" class="auth-link">попробуйте снова</a>.
        </div>
        <div class="auth-countdown">Перенаправление через: <span id="countdown">5</span> сек.</div>
    </div>
</div>

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .auth-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 40px;
        width: 100%;
        max-width: 480px;
        text-align: center;
    }

    .auth-icon {
        margin: 0 auto 24px;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: #EBF4FF;
    }

    .auth-title {
        font-size: 24px;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 16px;
    }

    .auth-text {
        color: #718096;
        margin-bottom: 24px;
        line-height: 1.5;
    }

    .auth-footer {
        color: #718096;
        font-size: 14px;
        margin-top: 24px;
    }

    .auth-countdown {
        color: #718096;
        font-size: 14px;
        margin-top: 16px;
    }
    .auth-link {
        color: #4e8cff;
        text-decoration: none;
        font-weight: 500;
    }

        .auth-link:hover {
            text-decoration: underline;
        }
</style>

@section Scripts {
    <script>
        let seconds = 5;
        const countdownElement = document.getElementById('countdown');

        const timer = setInterval(function() {
            seconds--;
            countdownElement.textContent = seconds;

            if (seconds <= 0) {
                clearInterval(timer);
                @if (!string.IsNullOrEmpty(Model.Email))
                {
                        @:window.location.href = '/ResetPassword?email=@Uri.EscapeDataString(Model.Email)';
                }
                else
                {
                        @:window.location.href = '/ResetPassword';
                }
            }
        }, 1000);
    </script>
}