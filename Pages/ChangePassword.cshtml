@page
@using System.Security.Claims
@model VeterinaryClinic.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Изменение пароля";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Изменение пароля</title>
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 40px;
        }

        .password-container {
            max-width: 500px;
            margin: auto;
            padding: 30px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .password-title {
            text-align: center;
            margin-bottom: 30px;
            color: #343a40;
            font-weight: 600;
        }

        .form-group label {
            font-weight: 500;
            color: #495057;
        }

        .form-control {
            border-radius: 8px;
            padding: 10px 15px;
            border: 1px solid #ced4da;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: #80bdff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        .btn-password {
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 500;
            transition: all 0.3s;
            width: 100%;
            margin-top: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<div class="password-container">
    <h2 class="password-title">Изменение пароля</h2>

    <form method="post">
        <div class="form-group">
            <label asp-for="PasswordModel.CurrentPassword">Текущий пароль</label>
            <input asp-for="PasswordModel.CurrentPassword" type="password" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="PasswordModel.NewPassword">Новый пароль</label>
            <input asp-for="PasswordModel.NewPassword" type="password" class="form-control" required />
            <small class="form-text text-muted">Пароль должен содержать минимум 8 символов</small>
        </div>
        <div class="form-group">
            <label asp-for="PasswordModel.ConfirmNewPassword">Подтвердите новый пароль</label>
            <input asp-for="PasswordModel.ConfirmNewPassword" type="password" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary btn-password">Изменить пароль</button>
        <a class="nav-link text-dark" asp-area="" asp-page="/Profile" asp-route-userId="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Назад к профилю</a>
    </form>
</div>