@page
@model VeterinaryClinic.Pages.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Пароль изменен";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-icon success">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#4CAF50" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
        </div>
        <h1 class="auth-title">Пароль успешно изменен!</h1>
        <p class="auth-text">Теперь вы можете войти с новым паролем</p>
        <a asp-page="./Login" class="auth-button">Войти в аккаунт</a>
    </div>
</div>

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .auth-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 40px;
        width: 100%;
        max-width: 480px;
        text-align: center;
    }

    .auth-icon {
        margin: 0 auto 24px;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

        .auth-icon.success {
            background: #E8F5E9;
        }

    .auth-title {
        font-size: 24px;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 16px;
    }

    .auth-text {
        color: #718096;
        margin-bottom: 32px;
        line-height: 1.5;
    }

    .auth-button {
        display: inline-block;
        background: #4e8cff;
        color: white;
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: background 0.2s;
    }

        .auth-button:hover {
            background: #3a7bf0;
            color: white;
        }
</style>