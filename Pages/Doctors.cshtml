@page
@model VeterinaryClinic.Pages.DoctorsModel
@{
    ViewData["Title"] = "Наши ветеринары";
}

<head>
    <style>
        :root {
            --primary-color: #4e8cff;
            --secondary-color: #ff5e5f;
            --accent-color: #6c5ce7;
            --light-bg: #f8f9fa;
            --dark-text: #2d3436;
            --light-text: #636e72;
            --white: #ffffff;
            --shadow: 0 10px 20px rgba(0,0,0,0.1);
            --border-radius: 16px;
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to bottom, #bad2ff 0%, rgba(248, 249, 250, 0.7) 100%);
            color: var(--dark-text);
            line-height: 1.6;
        }

        h2 {
            text-align: center;
            margin: 40px 0;
            color: var(--primary-color);
            font-size: 2.5rem;
            font-weight: 700;
            position: relative;
            animation: fadeInDown 0.8s ease-out;
        }

            h2::after {
                content: '';
                display: block;
                width: 80px;
                height: 4px;
                background: var(--secondary-color);
                margin: 15px auto;
                border-radius: 2px;
                animation: scaleIn 0.8s ease-out 0.3s both;
            }

        .doctors-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 30px;
            padding: 0 20px;
            max-width: 1400px;
            margin: 0 auto;
        }

        .doctor-card {
            background: var(--white);
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            display: flex;
            flex-direction: column;
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 0.6s ease-out forwards;
        }

            .doctor-card:nth-child(1) {
                animation-delay: 0.1s;
            }

            .doctor-card:nth-child(2) {
                animation-delay: 0.2s;
            }

            .doctor-card:nth-child(3) {
                animation-delay: 0.3s;
            }

            .doctor-card:nth-child(4) {
                animation-delay: 0.4s;
            }

            .doctor-card:nth-child(5) {
                animation-delay: 0.5s;
            }

            .doctor-card:nth-child(6) {
                animation-delay: 0.6s;
            }

            .doctor-card:nth-child(7) {
                animation-delay: 0.7s;
            }

            .doctor-card:nth-child(8) {
                animation-delay: 0.8s;
            }

            .doctor-card:nth-child(9) {
                animation-delay: 0.9s;
            }

            .doctor-card:nth-child(10) {
                animation-delay: 1.0s;
            }

            .doctor-card:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: 0 15px 30px rgba(0,0,0,0.15);
            }

        .doctor-photo-container {
            height: 280px;
            overflow: hidden;
            position: relative;
        }

        .doctor-photo {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
            transform-origin: center center;
        }

        .doctor-card:hover .doctor-photo {
            transform: scale(1.1);
        }

        .no-photo {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            color: var(--light-text);
            font-size: 1.2rem;
            animation: pulseBackground 4s infinite alternate;
        }

        .doctor-details {
            padding: 25px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .doctor-name {
            font-size: 1.8rem;
            margin: 0 0 10px;
            color: var(--dark-text);
            font-weight: 700;
            position: relative;
            overflow: hidden;
        }

            .doctor-name::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--secondary-color);
                transition: var(--transition);
            }

        .doctor-card:hover .doctor-name::after {
            width: 50px;
        }

        .specialization {
            display: inline-block;
            background: var(--primary-color);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            margin-bottom: 15px;
            font-weight: 500;
            transform: translateY(10px);
            opacity: 0;
            animation: fadeInUp 0.4s ease-out 0.3s forwards;
        }

        .schedule {
            color: var(--light-text);
            margin: 10px 0;
            font-size: 1rem;
            display: flex;
            align-items: center;
        }

            .schedule::before {
                content: '⏱️';
                margin-right: 8px;
                animation: pulse 2s infinite;
            }

        .bio {
            color: var(--light-text);
            margin: 15px 0;
            font-size: 0.95rem;
            line-height: 1.7;
            transition: var(--transition);
        }

        .doctor-card:hover .bio {
            color: var(--dark-text);
        }

        .rating-section {
            margin: 10px 0 15px;
            display: flex;
            align-items: center;
        }

        .star-rating {
            display: flex;
        }

        .star {
            font-size: 1.5rem;
            color: #e0e0e0;
            margin-right: 3px;
            transition: var(--transition);
            transform-origin: center bottom;
        }

            .star.active {
                color: #FFD700;
                text-shadow: 0 0 5px rgba(255, 215, 0, 0.3);
                animation: starPulse 0.5s ease-out forwards;
            }

                .star.active:nth-child(1) {
                    animation-delay: 0.5s;
                }

                .star.active:nth-child(2) {
                    animation-delay: 0.6s;
                }

                .star.active:nth-child(3) {
                    animation-delay: 0.7s;
                }

                .star.active:nth-child(4) {
                    animation-delay: 0.8s;
                }

                .star.active:nth-child(5) {
                    animation-delay: 0.9s;
                }

        .rating-value {
            margin-left: 10px;
            font-weight: 600;
            color: var(--dark-text);
        }

        .reviews-header {
            margin: 25px 0 15px;
            font-size: 1.3rem;
            color: var(--dark-text);
            position: relative;
            padding-bottom: 8px;
        }

            .reviews-header::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--secondary-color);
                transition: var(--transition);
            }

        .doctor-card:hover .reviews-header::after {
            width: 50px;
        }

        .reviews-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .review-item {
            background: rgba(78, 140, 255, 0.05);
            border-left: 3px solid var(--primary-color);
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 0 8px 8px 0;
            opacity: 0;
            transform: translateX(-20px);
            animation: fadeInRight 0.5s ease-out forwards;
        }

            .review-item:nth-child(1) {
                animation-delay: 0.8s;
            }

            .review-item:nth-child(2) {
                animation-delay: 0.95s;
            }

            .review-item:nth-child(3) {
                animation-delay: 1.1s;
            }

            .review-item:nth-child(4) {
                animation-delay: 1.25s;
            }

            .review-item:nth-child(5) {
                animation-delay: 1.4s;
            }

        .review-client {
            font-weight: 600;
            color: var(--dark-text);
            margin-bottom: 5px;
            display: flex;
            justify-content: space-between;
        }

        .review-date {
            font-size: 0.8rem;
            color: var(--light-text);
        }

        .review-comment {
            color: var(--light-text);
            font-size: 0.95rem;
            line-height: 1.6;
            margin: 10px 0;
        }

        .no-reviews {
            color: var(--light-text);
            font-style: italic;
            text-align: center;
            padding: 15px;
            animation: fadeIn 1s ease-out 0.5s forwards;
            opacity: 0;
        }

        .action-buttons {
            margin-top: auto;
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            padding-top: 20px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            text-align: center;
            flex-grow: 1;
            transform: translateY(10px);
            opacity: 0;
            animation: fadeInUp 0.4s ease-out 0.6s forwards;
        }

        .btn-add {
            background-color: var(--secondary-color);
            color: white;
            padding: 12px 25px;
            font-size: 1rem;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-top: 20px;
            margin-bottom: 20px;
        }

            .btn-add:hover {
                background-color: #e05d53;
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(255, 126, 95, 0.3);
            }

            .btn-add::before {
                content: '+';
                font-size: 1.2rem;
            }

        .btn-edit {
            background-color: var(--primary-color);
            color: white;
        }

            .btn-edit:hover {
                background-color: #3a7be0;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(78, 140, 255, 0.3);
            }

        .btn-delete {
            background-color: #ff6b6b;
            color: white;
        }

            .btn-delete:hover {
                background-color: #e05555;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 107, 107, 0.3);
            }
        .btn-primary {
            background: var(--primary-color);
            color: white;
            border: 2px solid var(--primary-color);
        }

            .btn-primary:hover {
                background: #3a7be0;
                border-color: #3a7be0;
                transform: translateY(-2px) scale(1.05);
                box-shadow: 0 5px 15px rgba(58, 123, 224, 0.3);
            }

        .btn-secondary {
            width: 100%;
            background: var(--secondary-color);
            color: white;
            border: 2px solid var(--secondary-color);
        }

            .btn-secondary:hover {
                background: #e05555;
                border-color: #e05555;
                transform: translateY(-2px) scale(1.05);
                box-shadow: 0 5px 15px rgba(224, 93, 83, 0.3);
            }

        /* Keyframe Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInRight {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes scaleIn {
            from {
                transform: scaleX(0);
            }

            to {
                transform: scaleX(1);
            }
        }

        @@keyframes starPulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.3);
            }

            100% {
                transform: scale(1);
            }
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.2);
            }

            100% {
                transform: scale(1);
            }
        }

        @@keyframes pulseBackground {
            0% {
                background-color: #f5f7fa;
            }

            100% {
                background-color: #e6e9f0;
            }
        }

        @@media (max-width: 768px) {
            .doctors-container {
                grid-template-columns: 1fr;
            }

            .doctor-photo-container {
                height: 220px;
            }
        }
    </style>
</head>

<div class="container">
    <h2>Наши ветеринары</h2>
    @if (User.IsInRole("Админ"))
    {
        <a class="btn btn-add" asp-page="/AddDoctors">Добавить нового врача</a>
    }
    <div class="doctors-container">
        
        @foreach (var doctor in Model.Doctors)
        {
            <div class="doctor-card">
                <div class="doctor-photo-container">
                    @if (!string.IsNullOrEmpty(doctor.PhotoUrl))
                    {
                        <img src="@doctor.PhotoUrl" alt="@doctor.Name" class="doctor-photo" />
                    }
                    else
                    {
                        <div class="no-photo">Фото врача</div>
                    }
                </div>

                <div class="doctor-details">
                    <h3 class="doctor-name">@doctor.Name</h3>
                    <span class="specialization">@doctor.Specialization</span>

                    <div class="rating-section">
                        <div class="star-rating">
                            @for (int j = 0; j < doctor.Rating; j++)
                            {
                                <span class="star active">★</span>
                            }
                            @for (int j = doctor.Rating; j < 5; j++)
                            {
                                <span class="star">☆</span>
                            }
                        </div>
                        <span class="rating-value">@doctor.Rating.ToString("0.0")</span>
                    </div>

                    <p class="schedule">@Html.Raw(doctor.Schedule)</p>

                    @if (!string.IsNullOrEmpty(doctor.Bio))
                    {
                        <p class="bio">@doctor.Bio</p>
                    }

                    <h4 class="reviews-header">Отзывы</h4>

                    @if (doctor.Reviews.Any())
                    {
                        <ul class="reviews-list">
                            @foreach (var review in doctor.Reviews.OrderByDescending(r => r.CreatedAt).Take(2))
                            {
                                <li class="review-item">
                                    <div class="review-client">
                                        <span>@review.ClientName</span>
                                        <span class="review-date">@review.CreatedAt.ToString("dd.MM.yyyy")</span>
                                    </div>
                                    <div class="star-rating">
                                        @for (int j = 0; j < review.Rating; j++)
                                        {
                                            <span class="star active">★</span>
                                        }
                                        @for (int j = review.Rating; j < 5; j++)
                                        {
                                            <span class="star">☆</span>
                                        }
                                    </div>
                                    <p class="review-comment">@review.Comment</p>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="no-reviews">Пока нет отзывов</p>
                    }

                    <div class="action-buttons">
                        @if (User.IsInRole("Клиент"))
                        {
                            <a class="btn btn-primary" asp-page="/CreateAppointment" asp-route-doctorId="@doctor.DoctorId">Записаться</a>
                        }
                        @if (User.IsInRole("Админ"))
                        {
                            <a class="btn btn-edit" asp-page="/AddDoctors" asp-route-doctorId="@doctor.DoctorId">Редактировать</a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@doctor.DoctorId" class="d-inline">
                                <button type="submit" class="btn btn-delete"
                                        onclick="return confirm('Вы уверены, что хотите удалить этого врача?')">
                                    Удалить
                                </button>
                            </form>
                            <a class="btn btn-secondary" asp-page="/AddDoctorSchedule" asp-route-doctorId="@doctor.DoctorId">Расписание</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
