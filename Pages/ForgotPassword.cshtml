@page
@model VeterinaryClinic.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Забыли пароль?";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#4e8cff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 2H3c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h7v2H8v2h8v-2h-2v-2h7c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"></path>
                <path d="M13 14.5V12c0-.6-.4-1-1-1s-1 .4-1 1v3c0 .5.2 1 .6 1.4.4.4.9.6 1.4.6h2c.6 0 1-.4 1-1s-.4-1-1-1h-2z"></path>
            </svg>
        </div>
        <h1 class="auth-title">Восстановление пароля</h1>
        <p class="auth-text">Введите email, который вы использовали при регистрации</p>

        <form method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="auth-error"></div>

            <div class="form-group">
                <label>Электронная почта</label>
                <input asp-for="Email" class="form-input" placeholder="your@email.com" />
                <span asp-validation-for="Email" class="form-error"></span>
            </div>

            <button type="submit" class="auth-button">Отправить</button>
        </form>

        <div class="auth-footer">
            <a href="/Login" class="auth-link">← Вернуться ко входу</a>
        </div>
    </div>
</div>

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .auth-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 40px;
        width: 100%;
        max-width: 480px;
    }

    .auth-icon {
        margin: 0 auto 24px;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: #EBF4FF;
    }

    .auth-title {
        font-size: 24px;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 16px;
        text-align: center;
    }

    .auth-text {
        color: #718096;
        text-align: center;
        margin-bottom: 24px;
        line-height: 1.5;
    }

    .auth-form {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

        .form-group label {
            font-size: 14px;
            color: #4a5568;
            font-weight: 500;
        }

    .form-input {
        padding: 12px 16px;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        font-size: 15px;
        transition: border 0.2s;
    }

        .form-input:focus {
            outline: none;
            border-color: #4e8cff;
        }

    .form-error {
        color: #e53e3e;
        font-size: 13px;
        min-height: 18px;
    }

    .auth-error {
        color: #e53e3e;
        font-size: 14px;
        margin-bottom: 16px;
        text-align: center;
    }

    .auth-button {
        background: #4e8cff;
        color: white;
        border: none;
        padding: 14px;
        border-radius: 8px;
        font-weight: 500;
        font-size: 15px;
        cursor: pointer;
        transition: background 0.2s;
        margin-top: 8px;
    }

        .auth-button:hover {
            background: #3a7bf0;
        }

    .auth-footer {
        margin-top: 24px;
        text-align: center;
        font-size: 14px;
    }

    .auth-link {
        color: #4e8cff;
        text-decoration: none;
        font-weight: 500;
    }

        .auth-link:hover {
            text-decoration: underline;
        }
</style>

<partial name="_ValidationScriptsPartial" />